<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.DetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/cabecera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView
                android:id="@+id/catName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="23sp"
                android:textStyle="bold" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imagen"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/yellow5"
                android:src="@mipmap/ic_launcher"
                android:textAlignment="center"
                app:shapeAppearanceOverlay="@style/roundedImageView" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cabecera"
            android:paddingStart="6dp"
            android:paddingEnd="6dp">

            <ScrollView
                android:id="@+id/scroll_view_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dip"
                        android:background="@color/gris2">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:background="@color/gris"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="Description"
                            android:textColor="@color/yellow6"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:paddingStart="5dp"
                            android:singleLine="false"
                            android:text="aaaaaaaaaaaaaaaaaaaaaaaxcxcxcxcxc"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dip"
                        android:background="@color/gris2">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:background="@color/gris"
                            android:paddingStart="5dp"
                            android:text="Country"
                            android:textColor="@color/yellow6"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/catPais"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:text="Hola"
                            android:textSize="18sp" />


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dip"
                        android:background="@color/gris2">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"

                            android:background="@color/gris"
                            android:paddingStart="5dp"
                            android:text="Intelligence"
                            android:textColor="@color/yellow6"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/catIntely"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:text="Hola"
                            android:textSize="18sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dip"
                        android:background="@color/gris2">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"

                            android:background="@color/gris"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="Weight"
                            android:textColor="@color/yellow6"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/catWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:textSize="18sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dip"
                        android:background="@color/gris2">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"

                            android:background="@color/gris"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="cfaUrl"
                            android:textColor="@color/yellow6"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/cfaUrl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dip"
                        android:background="@color/gris2">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"

                            android:background="@color/gris"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="vetstreetUrl"
                            android:textColor="@color/yellow6"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/vetstreetUrl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dip"
                        android:background="@color/gris2">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"

                            android:background="@color/gris"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="vetstreetUrl"
                            android:textColor="@color/yellow6"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/vcahospitalsUrl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dip"
                        android:background="@color/gris2">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"

                            android:background="@color/gris"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="temperament"
                            android:textColor="@color/yellow6"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/temperament"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dip"
                        android:background="@color/gris2">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"

                            android:background="@color/gris"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="origin"
                            android:textColor="@color/yellow6"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/origin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:textSize="18sp" />
                    </TableRow>

                </TableLayout>

            </ScrollView>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>